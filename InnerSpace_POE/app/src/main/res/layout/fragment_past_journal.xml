<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="17 Nov 2025"
        android:titleTextColor="@color/primaryText"
        app:navigationIcon="@drawable/ic_close"
        app:navigationIconTint="@color/primaryAccent"
        app:menu="@menu/journal_toolbar_menu"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Scrollable Journal Entry -->
    <ScrollView
        android:id="@+id/journalScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/journalEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start writing your thoughts..."
            android:minHeight="400dp"
            android:background="@drawable/lined_paper_background"
            android:padding="16dp"
            android:textColor="@color/primaryText"
            android:textSize="16sp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
