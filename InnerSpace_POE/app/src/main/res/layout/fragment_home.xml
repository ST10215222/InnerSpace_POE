<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Date -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 Aug 2025"
            android:textSize="12sp"
            android:textColor="@color/primaryText"
            android:layout_gravity="end" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back, Talia"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:layout_marginTop="28dp" />

        <!-- Soft Welcome Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_card_bg"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are you feeling today?"
                android:textColor="@color/secondaryText"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let’s reflect on your day."
                android:textColor="@color/primaryAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- Feature Card - Daily Entry -->
        <LinearLayout
            android:id="@+id/btnDailyEntry"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/feature_card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Entry"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record your mood an reflections."
                android:textColor="@color/secondaryText"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Feature Card - Past Entries -->
        <LinearLayout
            android:id="@+id/btnPastEntries"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/feature_card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past Entries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse your previous reflections."
                android:textColor="@color/secondaryText"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Feature Card - Motivational Quote -->
        <LinearLayout
            android:id="@+id/btnQuote"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/feature_card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motivational Quote"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find strength and positivity."
                android:textColor="@color/secondaryText"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Quote of the Day -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_card_bg"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quote of the Day"
                android:textStyle="bold"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDailyQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“Every day is a chance to grow.”"
                android:textColor="@color/secondaryText"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>