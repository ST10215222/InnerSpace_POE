<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="18 Nov 2025"
        android:titleTextColor="@color/primaryText"
        app:menu="@menu/journal_toolbar_menu"
        app:navigationIcon="@drawable/ic_close"
        app:navigationIconTint="@color/primaryAccent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Label above journal entry -->
    <TextView
        android:id="@+id/journalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Reflection"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Journal Entry Area -->
    <ScrollView
        android:id="@+id/journalScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/journalLabel"
        app:layout_constraintBottom_toTopOf="@id/actionBar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/journalEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start writing your thoughts..."
            android:minHeight="400dp"
            android:background="@drawable/lined_paper_background"
            android:textColor="@color/primaryText"
            android:textSize="16sp"
            android:padding="16dp"/>
    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Buttons -->
        <ImageButton
            android:id="@+id/btnWallpaper"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_wallpaper"
            android:contentDescription="Change wallpaper"
            app:tint="@color/primaryAccent"/>

        <ImageButton
            android:id="@+id/btnFontSize"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_text_size"
            android:contentDescription="Adjust font size"
            app:tint="@color/primaryAccent"/>

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_camera"
            android:contentDescription="Add photo"
            app:tint="@color/primaryAccent" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_save"
            android:contentDescription="Save entry"
            app:tint="@color/primaryAccent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
